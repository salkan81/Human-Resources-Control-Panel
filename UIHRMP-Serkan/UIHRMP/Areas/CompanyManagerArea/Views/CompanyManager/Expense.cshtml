@model RequestsVM

@{
    ViewData["Title"] = "Harcamalar";
}

@{
    int count = 1;
}

<h1>HARCAMALAR</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ÇALIŞAN AD</th>
      <th scope="col">ÇALIŞAN SOYAD</th>
      <th scope="col">TALEP TARİHİ</th>
      <th scope="col">TALEP MİKTARI</th>
      <th scope="col">TALEP DETAYI</th>
      <th scope="col">TALEP DURUMU</th>
    </tr>
  </thead>
  <tbody>

        @foreach (var item in Model.Expenses)
        {
            <tr>
                <th scope="row">@count</th>
                <td>@item.Employee.Name</td>
                <td>@item.Employee.Surname</td>
                <td>@item.DateOfExpense</td>
                <td>@item.Amount</td>
                <td>@item.Description</td>
                <td>@item.ConfirmStatus</td>
            </tr>
            
            count++;
            
        }
     


  </tbody>
</table>