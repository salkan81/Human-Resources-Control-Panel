@model HRMP.CORE.Entities.Expense

@{
    ViewData["Title"] = "Harcama Detayları";
}

<h1>HARCAMA DETAYLARI</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            HARCAMA TUTARI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            HARCAMA BİLGİSİ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseContent)
        </dd>
        <dt class = "col-sm-2">
            AÇIKLAMA
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            HARCAMA TALEP TARİHİ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfExpense)
        </dd>
        <dt class = "col-sm-2">
            HARCAMA TÜRÜ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseType)
        </dd>
        <dt class = "col-sm-2">
            BELGE
        </dt>
        <dd class = "col-sm-10">
            <a href=@Href(Model.ExpenseDocumentPath)>Döküman</a>
        </dd>
        <dt class = "col-sm-2">
            ÇALIŞANIN ADI
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Emp.Name
           
        </dd>
        <dt class = "col-sm-2">
            ÇALIŞANIN SOYADI
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Emp.Surname
        </dd>
        <dt class = "col-sm-2">
            ÇALIŞANIN TC NO
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Emp.TCNo
        </dd>

    </dl>
    <form asp-action="ExpenseDetails">
         <div style="margin-top:10px">
                <input type="submit" value="ONAYLA" class="btn btn-primary"
                   asp-action="AcceptExpenseRequest" asp-area="CompanyManagerArea" asp-controller="CompanyManager" asp-route-id="@Model.Id" style="color:white;text-decoration:none"/>
                <input type="submit" value="REDDET" class="btn btn-primary"
                   asp-action="RejectExpenseRequest" asp-area="CompanyManagerArea" asp-controller="CompanyManager" asp-route-id="@Model.Id" style="color:white;text-decoration:none"/>
            </div>
    </form>
    
</div>
<div>
    <a asp-area="CompanyManagerArea" asp-controller="CompanyManager" asp-action="Index">ANA SAYFA</a> |
</div>
