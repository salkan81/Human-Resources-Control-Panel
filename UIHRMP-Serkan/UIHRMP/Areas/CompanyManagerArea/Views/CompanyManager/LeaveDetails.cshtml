@model HRMP.CORE.Entities.Leave

@{
    ViewData["Title"] = "İzin Detayları";
}

<h1>İZİN DETAYLARI</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            İZİN KONUSU
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveContent)
        </dd>
        <dt class = "col-sm-2">
            İZİN TÜRÜ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveType)
        </dd>
        <dt class = "col-sm-2">
            İZİN GÜN SAYISI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalDaysOff)
        </dd>
        <dt class = "col-sm-2">
            İZİN BAŞLANGIÇ TARİHİ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartLeaveDate)
        </dd>
        <dt class = "col-sm-2">
            İZİN BİTİŞ TARİHİ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndLeaveDate)
        </dd>
        <dt class = "col-sm-2">
            AÇIKLAMA
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
         <dt class = "col-sm-2">
            ÇALIŞANIN ADI
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Emp.Name           
        </dd>
        <dt class = "col-sm-2">
            ÇALIŞANIN SOYADI
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Emp.Surname
        </dd>
        <dt class = "col-sm-2">
            ÇALIŞANIN TC NO
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Emp.TCNo
        </dd>

    </dl>
     <form asp-action="LeaveDetails">
         <div style="margin-top:10px">
                <input type="submit" value="ONAYLA" class="btn btn-primary"
                   asp-action="AcceptLeaveRequest" asp-area="CompanyManagerArea" asp-controller="CompanyManager" asp-route-id="@Model.Id" style="color:white;text-decoration:none"/>
                <input type="submit" value="REDDET" class="btn btn-primary"
                   asp-action="RejectLeaveRequest" asp-area="CompanyManagerArea" asp-controller="CompanyManager" asp-route-id="@Model.Id" style="color:white;text-decoration:none"/>
            </div>
    </form>
</div>
<div>
    <a asp-area="CompanyManagerArea" asp-controller="CompanyManager" asp-action="Index">ANA SAYFA</a> |
</div>
