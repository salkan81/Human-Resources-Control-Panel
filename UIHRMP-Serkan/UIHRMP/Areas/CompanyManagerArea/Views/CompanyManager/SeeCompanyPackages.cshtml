@model HRMP.CORE.Entities.Package

@{
    ViewData["Title"] = "Profil Bilgileri";
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150" src="@Url.Content(Context.Session.GetString("picPath"))"><span class="font-weight-bold">@Html.DisplayFor(model => model.Name)</span><span class="text-black-50" href="#">@Html.DisplayFor(model => model.PackagePhoto)</span></div>
        </div>
        <div class="col-md-8 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="text-right">Profil Bilgileri</h3>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Paket Adı</label><br />@Html.DisplayFor(model => model.Name)</div>
                    <div class="col-md-6"><label class="labels">Paket Tutarı</label><br />@Html.DisplayFor(model => model.Cost)</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Kullanıcı Sayısı</label><br />@Html.DisplayFor(model => model.NumberOfUser)</div>
                    <div class="col-md-6"><label class="labels">Paket Başlangıç Tarihi</label><br />@Html.DisplayFor(model => model.StartDateToUse)</div>
                </div>
                
                    <div class="col-md-6"><label class="labels">Paket Bitiş Tarihi</label><br />@Html.DisplayFor(model => model.LastDateToUse)</div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Oluşturulma Tarihi</label><br />@Html.DisplayFor(model => model.GenerationDate)</div>
                    <div class="col-md-6"><label class="labels">Paket Kullanım Gün Sayısı</label><br />@Html.DisplayFor(model => model.PackageTimeInDays)</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="ManagerDetails">Geri Dön</a>
</div>
