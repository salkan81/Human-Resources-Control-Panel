@model AdvancedPayment

@{
    ViewData["Title"] = "AVANS";
}

<h1>AVANS</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdvancePayments">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentContent" class="control-label">AVANS TALEP GEREKÇESİ</label>
                <input asp-for="PaymentContent" class="form-control" />
                <span asp-validation-for="PaymentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfIssue" class="control-label">AVANS TALEP TARİHİ</label>
                <input asp-for="DateOfIssue" type="date" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">AÇIKLAMA</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
